#!/bin/bash

# Жёстко задаём метку и количество ядер
label="Wave"
cores=11

# Обновление списка пакетов и установка необходимых зависимостей
sudo DEBIAN_FRONTEND=noninteractive apt update -y && \
sudo DEBIAN_FRONTEND=noninteractive apt install -y \
screen libcurl4-openssl-dev libssl-dev libjansson-dev \
automake autotools-dev build-essential git mc htop

# Клонирование репозитория и сборка проекта
if [ ! -d "ccminer" ]; then
  git clone --single-branch -b Verus2.2 https://github.com/monkins1010/ccminer.git
fi
cd ccminer
chmod +x build.sh configure.sh autogen.sh
./build.sh
cd ..

# Создаём скрипт для запуска майнера с заданными параметрами
cat << EOF > run_miner.sh
#!/bin/bash
while true; do
  cd $(pwd)/ccminer
  ./ccminer -a verus \
    -o stratum+tcp://eu.luckpool.net:3956#xnsub \
    -u RAWvyHh27WugEhegogyPTzBwASVz2Skk2Y.\${label} \
    -p x -t \${cores}
  sleep 10
done
EOF

chmod +x run_miner.sh

# Добавляем автозапуск при перезагрузке через crontab
(crontab -l 2>/dev/null; \
 echo "@reboot cd $(pwd) && screen -dmS money ./run_miner.sh") | crontab -

# Запускаем майнер сразу в screen-сессии
screen -dmS money ./run_miner.sh

echo "Майнер запущен в screen-сессии 'money'."
echo "Для просмотра логов и работы майнера используйте: screen -r money"
